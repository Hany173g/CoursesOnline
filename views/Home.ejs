<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Home - CourseOnline</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    .course-img {
      width: 100%;
      height: 200px;      /* تحديد ارتفاع ثابت */
      object-fit: cover;  /* تغطية الصورة بالكامل بدون تشويه */
    }
  </style>
</head>
<body>

  <%- include('./parts/navbar') %>

  <!-- Hero Section -->
  <section class="bg-primary text-white text-center py-5">
    <div class="container">
      <h1 class="display-4 fw-bold">Welcome to CourseOnline</h1>
      <p class="lead">Your journey to knowledge starts here. Browse hundreds of courses in all fields.</p>
      <a href="/categories" class="btn btn-light btn-lg mt-3">Explore Categories</a>
    </div>
  </section>

  <!-- Categories -->
  <section class="py-5">
    <div class="container">
      <h2 class="mb-4">Top Categories</h2>
      <div class="row g-4">
        <div class="col-md-3"><div class="card h-100"><div class="card-body text-center"><h5 class="card-title">Programming</h5></div></div></div>
        <div class="col-md-3"><div class="card h-100"><div class="card-body text-center"><h5 class="card-title">Design</h5></div></div></div>
        <div class="col-md-3"><div class="card h-100"><div class="card-body text-center"><h5 class="card-title">Marketing</h5></div></div></div>
        <div class="col-md-3"><div class="card h-100"><div class="card-body text-center"><h5 class="card-title">Languages</h5></div></div></div>
      </div>
    </div>
  </section>

  <!-- Featured Courses -->
  <% if (courses) { %>
    <section class="bg-light py-5">
      <div class="container">
        <h2 class="mb-4">Featured Courses</h2>
        <div class="row g-4">
          <% for(let course of courses) { %>
            <div class="col-md-4">
              <div class="card h-100">
                <img src="<%= course.name %>" alt="Course" class="teacher-image"
               onerror="this.onerror=null; this.src='/download.png'" />
                <div class="card-body">
                  <h5 class="card-title"><%= course.name %></h5>
                  <p class="card-text"><%= course.description %></p>
                  <a href="/course/<%= course.name %>" class="btn btn-primary">Enroll Now</a>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </section>
  <% } %>

  <!-- CTA -->
   <% if(!userId) { %>
  <section class="text-center py-5">
    <div class="container">
      <h2 class="mb-3">Ready to start your learning journey?</h2>
      <a href="/register" class="btn btn-success btn-lg">Create Your Free Account</a>
    </div>
  </section>
  <% } %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
