<!DOCTYPE html>
<html lang="ar">
<head>
  <meta charset="UTF-8">
  <title>عرض المستخدمين</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div dir="ltr">
    <%- include('./parts/navbar') %>
  </div>
  <div class="container py-5">
    <h2 class="mb-4 text-center">قائمة المستخدمين</h2>
    
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

      <!-- كارت مستخدم -->
    <% if(userSearch && userSearch.length > 0) {%>
    <% for(user of userSearch){ %>
      <div class="col">
        <div class="card h-100 shadow-sm">
         <img src="/<%= user.img %>"
     onerror="this.onerror=null; this.src='/profile.jpeg';"
     alt="صورة المستخدم"
     class="rounded-circle mx-auto d-block mt-4"
     style="width: 150px; height: 150px; object-fit: cover;">


          <div class="card-body">
            <h5 class="card-title">Username "<%= user.name %>"</h5>
            <p class="card-text"> Email: <%= user.email %></p>
            <p class="card-text">access: <%= user.access%></p>
          </div>
        </div>
      </div>
      <% } %>
      <% } else{%>
        <div class="position-absolute top-50 start-50 translate-middle">
            <p class="text-danger fs-4 fw-semibold text-center">لم يتم العثور على هذا المستخدم</p>
        </div>
        <% } %>
     
    </div>
  </div>

</body>
</html>
